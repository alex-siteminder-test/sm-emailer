{
  "name": "email-sender",
  "private": true,
  "version": "1.0.0",
  "description": "A simple service that provides a RESTful API for sending emails, abstracting across multiple transport services",
  "scripts": {
    "test": "mocha --no-deprecation --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \\\"src/test/**/*.spec.ts\\\"",
    "start": "",
    "dev": "nodemon src/server.ts"
  },
  "author": "A. Nonymous",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.0",
    "@types/nock": "^11.1.0",
    "@types/supertest": "^2.0.10",
    "express": "^4.17.1",
    "mocha": "^8.0.1",
    "nock": "^13.0.2",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  }
}
